@model bwarrickBugTracker.Models.Helpers.AdminUserViewModels

@{
    ViewBag.Title = "EditUserRoles";
}

<h2>EditUserRoles</h2>
<hr />

@using (Html.BeginForm("EditUserRoles", "Admin", FormMethod.Post))
{
    <h4>@Html.DisplayFor(model => model.User.FullName)
    <input type="submit" value="Assign Roles" class="btn btn-default" style="margin-top:-7px;" />
    </h4>
    <hr />
    @Html.HiddenFor((model => model.User.Id))
    @Html.ListBox("SelectedRoles", Model.Roles, new { @class = "multi-select"})
}

<div style="margin-top:40px;">
    @Html.ActionLink("Back to Admin Index", "Index")
</div>
@section Scripts{
    <script type="text/javascript" src="~/Assets/MultiSelect/multi-select.js"></script>
    <script type="text/javascript">
            $(function () {
                "use strict";
                $('.multi-select').multiSelect({
                    selectableHeader: "<div style='text-align:center; background-color: black; color:white;'><strong>Available Roles</strong></div>",
                    selectionHeader: "<div style='text-align:center; background-color: black; color:white;'><strong>User Roles</strong></div>"
                });

                $(".ms-container").append('<i class="glyph-icon icon-exchange"></i>');
            });

    </script>
}




